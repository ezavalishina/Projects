<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.focus.zavalishina.eventchecker">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ru.focus.zavalishina.eventchecker.presentation.ui.activities.EventListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ru.focus.zavalishina.eventchecker.presentation.ui.activities.GuestDescriptionActivity"/>
        <activity android:name="ru.focus.zavalishina.eventchecker.presentation.ui.activities.GuestListActivity"/>
        <activity android:name="ru.focus.zavalishina.eventchecker.presentation.ui.activities.StatisticsActivity"/>

        <service android:name="ru.focus.zavalishina.eventchecker.presentation.ui.services.LoadEventService"/>
    </application>

</manifest>